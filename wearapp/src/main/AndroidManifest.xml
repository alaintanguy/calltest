<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wearproto">

    <!-- Wear OS device -->
    <uses-feature android:name="android.hardware.type.watch" android:required="true" />

    <!-- Watch-side runtime permissions you actually use -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <!-- Add if you read location on the watch -->
    <!-- <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> -->

    <application
        android:label="WearProto"
        android:allowBackup="false">

        <!-- Launchable activity on the watch -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Wear OS data layer listener (phone<->watch messaging) -->
        <service
            android:name=".WearMsgService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

    </application>
</manifest>
